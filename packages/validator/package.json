{
  "name": "@lodestar/validator",
  "version": "1.1.1",
  "description": "A Typescript implementation of the validator client",
  "author": "ChainSafe Systems",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/ChainSafe/lodestar/issues"
  },
  "homepage": "https://github.com/ChainSafe/lodestar#readme",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*.js",
    "lib/**/*.js.map",
    "lib/**/*.d.ts",
    "*.d.ts",
    "*.js"
  ],
  "scripts": {
    "clean": "rm -rf lib && rm -f *.tsbuildinfo",
    "setup": "yarn install && yarn allow-scripts",
    "build": "tsc -p tsconfig.build.json",
    "build:release": "yarn clean && yarn run build",
    "build:lib:watch": "yarn run build:lib --watch",
    "build:types:watch": "yarn run build:types --watch",
    "check-build": "node -e \"(async function() { await import('./lib/index.js') })()\"",
    "check-types": "tsc",
    "lint": "eslint --color --ext .ts src/ test/",
    "lint:fix": "yarn run lint --fix",
    "pretest": "yarn run check-types",
    "test:unit": "yarn setup && nyc --cache-dir .nyc_output/.cache -e .ts mocha 'test/unit/**/*.test.ts'",
    "test": "yarn setup && yarn test:unit",
    "test:e2e:only": "yarn setup && mocha 'test/e2e/**/*.test.ts'",
    "test:spec": "yarn setup && mocha 'test/spec/**/*.test.ts'",
    "test:e2e": "yarn setup && yarn run download-spec-tests && yarn test:spec && yarn test:e2e:only",
    "download-spec-tests": "node --loader=ts-node/esm test/spec/downloadTests.ts",
    "coverage": "codecov -F lodestar-validator",
    "check-readme": "typescript-docs-verifier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ChainSafe/lodestar.git"
  },
  "keywords": [
    "ethereum",
    "eth-consensus",
    "beacon",
    "blockchain"
  ],
  "dependencies": {
    "@chainsafe/bls": "7.1.1",
    "@chainsafe/ssz": "^0.9.2",
    "@lodestar/api": "^1.1.1",
    "@lodestar/config": "^1.1.1",
    "@lodestar/db": "^1.1.1",
    "@lodestar/params": "^1.1.1",
    "@lodestar/state-transition": "^1.1.1",
    "@lodestar/types": "^1.1.1",
    "@lodestar/utils": "^1.1.1",
    "bigint-buffer": "^1.1.5",
    "cross-fetch": "^3.1.4",
    "strict-event-emitter-types": "^2.0.0"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^2.0.3",
    "@lavamoat/preinstall-always-fail": "^1.0.0",
    "bigint-buffer": "^1.1.5",
    "testcontainers": "^8.13.2"
  },
  "lavamoat": {
    "allowScripts": {
      "@chainsafe/bls>@chainsafe/blst": true,
      "@lodestar/db>level>classic-level": true,
      "bigint-buffer": true,
      "@lavamoat/preinstall-always-fail": false,
      "testcontainers>ssh-remote-port-forward>ssh2": true,
      "testcontainers>ssh-remote-port-forward>ssh2>cpu-features": true
    }
  }
}
